<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newlandnpt.varyar.system.mapper.TRoomMapper">
    
    <resultMap type="TRoom" id="TRoomResult">
        <result property="roomId"    column="room_id"    />
        <result property="name"    column="name"    />
        <result property="familyId"    column="family_id"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectTRoomVo">
        select room_id, name, family_id, del_flag, create_time, update_time from t_room
    </sql>
    <sql id="selectTRoomVo1">
        select r.room_id, r.name, r.family_id, r.del_flag, r.create_time, r.update_time
    </sql>
    <select id="selectTRoomList" parameterType="TRoom" resultMap="TRoomResult">
        <include refid="selectTRoomVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="familyId != null "> and family_id = #{familyId}</if>
        </where>
    </select>
    <select id="selectByMemberIdList" parameterType="TRoom" resultMap="TRoomResult">
        <include refid="selectTRoomVo1"/>
        from t_room r
        join t_family tf on tf.family_id = r.family_id and tf.del_flag ="0"
        join  t_member_family tmf on tmf.family_id = tf.family_id and tmf.del_flag ="0"and tmf.member_id = #{memberId}
        where r.del_flag= '0'
    </select>
    
    <select id="selectTRoomByRoomId" parameterType="Long" resultMap="TRoomResult">
        <include refid="selectTRoomVo"/>
        where room_id = #{roomId}
    </select>
        
    <insert id="insertTRoom" parameterType="TRoom" useGeneratedKeys="true" keyProperty="roomId">
        insert into t_room
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">name,</if>
            <if test="familyId != null">family_id,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
            <if test="familyId != null">#{familyId},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateTRoom" parameterType="TRoom">
        update t_room
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="familyId != null">family_id = #{familyId},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where room_id = #{roomId}
    </update>

    <delete id="deleteTRoomByRoomId" parameterType="Long">
        update t_room
        set del_flag = '2',update_time = DATE_FORMAT(NOW(),'%Y-%m-%d %H:%i:%s')
        where room_id = #{roomId}
    </delete>

    <delete id="deleteTRoomByRoomIds" parameterType="String">
        update t_room
        set del_flag = '2',update_time = DATE_FORMAT(NOW(),'%Y-%m-%d %H:%i:%s')
        where room_id in
        <foreach item="roomId" collection="array" open="(" separator="," close=")">
            #{roomId}
        </foreach>
    </delete>
</mapper>