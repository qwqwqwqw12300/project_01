<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newlandnpt.varyar.system.mapper.TDevicegroupMapper">
    
    <resultMap type="TDevicegroup" id="TDevicegroupResult">
        <result property="devicegroupId"    column="devicegroup_id"    />
        <result property="orgId"    column="org_id"    />
        <result property="name"    column="name"    />
        <result property="no"    column="no"    />
        <result property="userId"    column="user_id"    />
        <result property="userName"    column="user_name"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectTDevicegroupVo">
        select devicegroup_id, org_id, name, no, user_id, user_name, del_flag, create_by, create_time, update_by, update_time from t_devicegroup
    </sql>

    <select id="selectTDevicegroupList" parameterType="TDevicegroup" resultMap="TDevicegroupResult">
        <include refid="selectTDevicegroupVo"/>
        <where>  
            <if test="orgId != null "> and org_id = #{orgId}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="no != null  and no != ''"> and no = #{no}</if>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="userName != null  and userName != ''"> and user_name like concat('%', #{userName}, '%')</if>
        </where>
    </select>
    
    <select id="selectTDevicegroupByDevicegroupId" parameterType="Long" resultMap="TDevicegroupResult">
        <include refid="selectTDevicegroupVo"/>
        where devicegroup_id = #{devicegroupId}
    </select>
        
    <insert id="insertTDevicegroup" parameterType="TDevicegroup" useGeneratedKeys="true" keyProperty="devicegroupId">
        insert into t_devicegroup
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="orgId != null">org_id,</if>
            <if test="name != null">name,</if>
            <if test="no != null">no,</if>
            <if test="userId != null">user_id,</if>
            <if test="userName != null">user_name,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="orgId != null">#{orgId},</if>
            <if test="name != null">#{name},</if>
            <if test="no != null">#{no},</if>
            <if test="userId != null">#{userId},</if>
            <if test="userName != null">#{userName},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateTDevicegroup" parameterType="TDevicegroup">
        update t_devicegroup
        <trim prefix="SET" suffixOverrides=",">
            <if test="orgId != null">org_id = #{orgId},</if>
            <if test="name != null">name = #{name},</if>
            <if test="no != null">no = #{no},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="userName != null">user_name = #{userName},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where devicegroup_id = #{devicegroupId}
    </update>

    <delete id="deleteTDevicegroupByDevicegroupId" parameterType="Long">
        delete from t_devicegroup where devicegroup_id = #{devicegroupId}
    </delete>

    <delete id="deleteTDevicegroupByDevicegroupIds" parameterType="String">
        delete from t_devicegroup where devicegroup_id in 
        <foreach item="devicegroupId" collection="array" open="(" separator="," close=")">
            #{devicegroupId}
        </foreach>
    </delete>
</mapper>